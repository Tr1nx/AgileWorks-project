@page
@model WebApp.Pages_Requests.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1 align="center">Resolved Tickets</h1>

<p align="right">
    <a asp-page="Create">Create New Ticket</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Request[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Request[0].CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Request[0].Deadline)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Request[0].Resolved)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Request) {
        <tr>
            <td  class="description-column">
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Deadline)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Resolved)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
